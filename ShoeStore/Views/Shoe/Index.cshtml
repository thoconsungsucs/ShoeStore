@model List<Shoe>

        <partial name="_Notifications" />
<div class="container">
    <div class="row py-4">
        <div class="col-6">
            <h2 class="text-primary">Shoe List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Shoe" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                Create New Shoe
            </a>
        </div>

    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Shoe Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Price
                </th>
                <th>
                    Category Name
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.ShoeName</th>
                    <th>@item.Description</th>
                    <th>@item.Price</th>
                    <th>@item.Category.CategoryName</th>
                    <th class="text-end w-10 p-0 align-content-center">
                        <div class="btn-group" style="min-width: 150px;">
                            <a asp-controller="Shoe" asp-action="Upsert" asp-route-id="@item.ShoeId" class="btn btn-primary">
                                <i class="bi bi-pencil"></i>
                                Edit
                            </a>
                            <a asp-controller="Shoe" asp-action="Delete" asp-route-id="@item.ShoeId" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </div>
                    </th>
                </tr>
            }
        </tbody>

    </table>
</div>